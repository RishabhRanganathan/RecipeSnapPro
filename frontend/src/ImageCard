import axios from 'axios';

const findimage=async(term)=>{
    const response = await axios.get('https://api.unsplash.com/search/photos', {
                headers: {
                    Authorization: 'Client-ID FJXGqT_nNPSCsbcQQ5OTSQdUyDz-1irsSisUQYD7OAM'
                },
                params:{
                    query: term,
                }
            });
        return response.data.results;
    }

function ImageCard({term}){
    const thisimage= findimage(term);
    const renderedImages = thisimage.map((image)=>{
        return <img src={image.urls.small} alt ={image.alt_description}/>
    });

    return(
        <div>
            {renderedImages}

        </div>
    )

}

export default ImageCard;